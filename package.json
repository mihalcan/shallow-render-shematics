{
  "name": "shallow-render-schematics",
  "version": "1.0.0",
  "description": "shallow-render schematics collection for angular-cli",
  "engines": {
    "node": ">=12.10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mihalcan/shallow-render-shematics.git"
  },
  "license": "MIT",
  "keywords": [
    "angular",
    "shallow-render"
  ],
  "scripts": {
    "test": "jest",
    "lint": "tslint -p tsconfig.json",
    "clean": "rm -Rf dist",
    "build": "yarn clean && mkdir dist && node scripts/create-package.js && tsc -p tsconfig.json",
    "check-format": "prettier --check src/**/*.ts scripts/*.js",
    "format": "prettier --write src/**/*.ts scripts/*.js",
    "ci": "yarn check-format && yarn lint && yarn build && yarn test"
  },
  "dependencies": {
    "@angular-devkit/core": "^7.0.6",
    "@angular-devkit/schematics": "^7.0.6",
    "@schematics/angular": "^7.3.10",
    "typescript": "~3.1.4"
  },
  "devDependencies": {
    "@types/jest": "23.3.10",
    "@types/node": "^10.17.21",
    "husky": "4.0.7",
    "jest": "23.6.0",
    "prettier": "^2.0.4",
    "ts-jest": "23.10.5",
    "tslint": "^6.1.1"
  }
}
